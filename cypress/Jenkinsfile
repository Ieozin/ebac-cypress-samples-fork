pipeline {
    agent any

    stages {
        stage('Clonar o Repositorio') {
            steps {
                git branch : 'main', url: 'https://github.com/EBAC-QE/testes-e2e-ebac-shop.git'
            }
        }
        stage('Instalar Dependencias') {
            setps {
                sh 'npm install'
            }
        }
        stage('Executar testes') {
            steps {
                sh 'NO_COLOR=1 npm run cy:run'
            }
        }
    }   
}